<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pakoandrade.plannerland.registro.LoginActivityFragment"
    tools:showIn="@layout/activity_login">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:id="@+id/logotipo"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_user_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/material_blue_grey_800"
                android:background="#FFFFFF"
                android:hint="Usuario"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:maxLines="1"
                android:singleLine="true"
                android:scrollHorizontally = "true"
                android:ellipsize = "end" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_user_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:maxLines="1"
                android:singleLine="true"
                android:scrollHorizontally = "true"
                android:ellipsize = "end"
                android:textColorHint="@color/material_blue_grey_800"
                android:background="#ffffff"
                android:textColor="#000000"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_user_value_ok"
            android:layout_width="212dp"
            android:layout_height="45dp"
            android:text="Iniciar Sesion"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrate"
            android:id="@+id/registerL"
            android:layout_weight="0.09"
            android:layout_marginTop="20dp"
            android:textColor="#0D47A1"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>





</RelativeLayout>
